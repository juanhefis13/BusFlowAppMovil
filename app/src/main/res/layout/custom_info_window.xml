<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/empresaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/rutaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/empresaTextView"
        app:layout_constraintTop_toBottomOf="@+id/empresaTextView"
        app:layout_constraintEnd_toEndOf="@+id/empresaTextView"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/horaInicioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/rutaTextView"
        app:layout_constraintTop_toBottomOf="@+id/rutaTextView"
        app:layout_constraintEnd_toEndOf="@+id/rutaTextView"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/horaFinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/horaInicioTextView"
        app:layout_constraintTop_toBottomOf="@+id/horaInicioTextView"
        app:layout_constraintEnd_toEndOf="@+id/horaInicioTextView"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

